                "MAIL_SERVICE_BIND": "127.0.0.2:8181",
                "MAIL_SERVICE_BIND_TLS": "127.0.0.2:2125",
                "MAILBOX_SERVICE_CERT_PATH": "./storage/federizer.org/certificates/server.crt",
                "MAILBOX_SERVICE_KEY_PATH": "./storage/federizer.org/certificates/server.key",
                "MAILBOX_SERVICE_BIND": "127.0.0.2:8182",
