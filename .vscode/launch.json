{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "cargomail.org",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "env": {
                "DOMAIN_NAME": "cargomail.org",
                "DOH_PROVIDER_HOST": "cloudflare-dns.com",
                "STORAGE_PATH": "./storage/cargomail.org",
                "DATABASE_PATH": "./storage/cargomail.org/database/cargomail.db",
                "RESOURCES_PATH": "./storage/cargomail.org/resources/",
                "MAIL_SERVICE_CERT_PATH": "./storage/cargomail.org/certificates/server.crt",
                "MAIL_SERVICE_KEY_PATH": "./storage/cargomail.org/certificates/server.key",
                "MAIL_SERVICE_BIND": "127.0.0.1:8181",
                "MAIL_SERVICE_BIND_TLS": "127.0.0.1:2125",
                "MAILBOX_SERVICE_CERT_PATH": "./storage/cargomail.org/certificates/server.crt",
                "MAILBOX_SERVICE_KEY_PATH": "./storage/cargomail.org/certificates/server.key",
                "MAILBOX_SERVICE_BIND": "127.0.0.1:8182",
                "MAILBOX_SERVICE_BIND_TLS": "127.0.0.1:2126",
                "COOKIE_SAME_SITE": "none",
                "STAGE": "dev"
            }
        },
        {
            "name": "federizer.org",
